= will_paginate @characters

%form{:method => :get}
  %label{:for => 'term'}
  %input{:type => 'text', :name => 'term', :value => @term}
  %input{:type => 'submit'}

%p= @character_count

%ul
  -@characters.each do |c|
    %li
      %dl
        %dt.description= c.description
        %dd.code= c.code
        %dd.hex= c.hex
        %dd.ref= c.ref

